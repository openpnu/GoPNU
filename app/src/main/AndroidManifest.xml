<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.openpnu.gopnu">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".GoPNUApplication"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <uses-library android:name="org.apache.http.legacy" android:required="false"/>


    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyDsRUBLrQ6lSnaIOwVloVO5dT8LyV-ooUA" />

    <activity android:name=".ui.SignInActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.MapActivity"/>
    <activity android:name=".ui.SignInByEmailActivity"/>
    <activity android:name=".ui.MainActivity"/>

    <receiver android:name=".ui.LocationReceiver"
        android:exported="false"
        android:enabled="true">
      <intent-filter>
        <action android:name="proximityAlert"/>

      </intent-filter>
    </receiver>

  </application>

</manifest>